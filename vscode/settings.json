{
    "editor.fontSize": 14,
    "editor.fontFamily": "Consolas, 'Courier New', monospace",
    "editor.lineNumbers": "on",
    "editor.renderWhitespace": "all",
    "editor.renderControlCharacters": false,
    "editor.minimap.enabled": true,
    "editor.minimap.renderCharacters": false,
    "editor.minimap.maxColumn": 50,
    "editor.wordWrap": "off",
    "editor.wrappingIndent": "none",
    "editor.scrollBeyondLastLine": false,
    
    "workbench.editor.enablePreview": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,

    "window.restoreWindows": "all",
    "window.zoomLevel": 0,
    "window.title": "${dirty}${folderName}${separator}${activeEditorShort}",
    "window.menuBarVisibility": "default",
    
    "workbench.colorTheme": "Atom One Dark",
    "workbench.iconTheme": "vscode-icons",
    "workbench.editor.tabCloseButton": "left",
    "workbench.editor.showIcons": false,
    "workbench.sideBar.location": "left",
    "workbench.colorCustomizations": {
        "tab.activeBackground": "#577910"
    },
    
    "explorer.openEditors.visible": 5,
    "explorer.openEditors.dynamicHeight": false,
    "explorer.sortOrder": "mixed",
    
    "java.home": "C:/Program Files/Java/jdk1.8.0_121",
    "terminal.integrated.shell.windows": "C:\\Program Files\\Git\\bin\\bash.exe",
    "[php]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true
    },
    
    "ftp-simple": {
        "remote-workspace" : "d:/work/ftp-simple",
        "remote-workspace-load-all" : true
    }
}